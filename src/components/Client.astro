---
const clients = [
  { name: "Betterhomes", logo: "/logos/Curriki_logo_header.svg" },
  { name: "Lexus", logo: "/logos/Curriki_logo_header.svg" },
  { name: "Orange", logo: "/logos/Curriki_logo_header.svg" },
  { name: "The New York Times", logo: "/logos/Curriki_logo_header.svg" },
  { name: "SUBU", logo: "/logos/Curriki_logo_header.svg" },
];
---

<section
  class="py-12 border-b border-gray-100 dark:border-gray-800 bg-white dark:bg-background-dark"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <p
      class="text-center text-sm font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-widest mb-8"
    >
      Trusted by innovative companies
    </p>

    <!-- Logos Slider -->
    <div class="relative w-full overflow-hidden mask-gradient">
      <div class="flex animate-slide whitespace-nowrap group">
        {
          clients
            .concat(clients)
            .concat(clients)
            .map((client) => (
              <div class="flex-shrink-0 flex items-center justify-center mx-12">
                <img
                  src={client.logo}
                  alt={client.name}
                  class="h-8 md:h-10 w-auto object-contain grayscale opacity-60 group-hover:grayscale-0 group-hover:opacity-100 transition-all duration-500"
                  loading="lazy"
                />
              </div>
            ))
        }
      </div>
    </div>
  </div>

  <style>
    .mask-gradient {
      mask-image: linear-gradient(
        to right,
        transparent,
        black 10%,
        black 90%,
        transparent
      );
    }

    @keyframes slide {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-33.33%);
      }
    }

    .animate-slide {
      animation: slide 10s linear infinite;
    }

    .animate-slide:hover {
      animation-play-state: paused;
    }
  </style>
</section>
