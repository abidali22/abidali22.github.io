<section id="about" class="py-24 bg-slate-50 dark:bg-slate-900/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Image/Visual side -->
            <div class="relative group">
                <div
                    class="absolute -inset-4 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-2xl opacity-10 group-hover:opacity-20 transition-opacity blur-2xl"
                >
                </div>
                <div
                    class="relative bg-white dark:bg-slate-800 p-8 rounded-2xl border border-slate-200 dark:border-slate-700 shadow-xl"
                >
                    <div class="grid grid-cols-2 gap-4">
                        <div class="space-y-4">
                            <div
                                class="h-32 bg-cyan-100 dark:bg-cyan-900/30 rounded-xl animate-pulse"
                            >
                            </div>
                            <div
                                class="h-48 bg-slate-100 dark:bg-slate-700/30 rounded-xl"
                            >
                            </div>
                        </div>
                        <div class="space-y-4 pt-8">
                            <div
                                class="h-48 bg-slate-100 dark:bg-slate-700/30 rounded-xl"
                            >
                            </div>
                            <div
                                class="h-32 bg-blue-100 dark:bg-blue-900/30 rounded-xl animate-pulse"
                            >
                            </div>
                        </div>
                    </div>
                    <div class="mt-8">
                        <h4
                            class="text-2xl font-bold text-slate-900 dark:text-white mb-2"
                        >
                            10+ Years of Innovation
                        </h4>
                        <p class="text-slate-600 dark:text-slate-400">
                            Delivering excellence since 2014.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Text side -->
            <div>
                <h2
                    class="text-4xl font-bold text-slate-900 dark:text-white mb-6"
                >
                    Who We Are
                </h2>
                <p
                    class="text-lg text-slate-600 dark:text-slate-300 mb-8 leading-relaxed"
                >
                    Triasoft Systems is a premier software house dedicated to
                    engineering high-performance digital solutions. We combine
                    technical expertise with creative vision to help businesses
                    scale and thrive in the modern age.
                </p>

                <div class="grid sm:grid-cols-2 gap-6">
                    <div
                        class="p-4 rounded-xl bg-white dark:bg-slate-800 border border-slate-100 dark:border-slate-700 shadow-sm"
                    >
                        <h3 class="font-bold text-cyan-600 mb-2">
                            Our Mission
                        </h3>
                        <p
                            class="text-sm text-slate-500 dark:text-slate-400 text-pretty"
                        >
                            To empower organizations through robust, secure, and
                            scalable technology.
                        </p>
                    </div>
                    <div
                        class="p-4 rounded-xl bg-white dark:bg-slate-800 border border-slate-100 dark:border-slate-700 shadow-sm"
                    >
                        <h3 class="font-bold text-blue-600 mb-2">Our Values</h3>
                        <p
                            class="text-sm text-slate-500 dark:text-slate-400 text-pretty"
                        >
                            Transparency, agility, and a relentless focus on
                            client success.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
