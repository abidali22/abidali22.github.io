---
const pricingPlans = [
    {
        name: "Design only",
        description:
            "Works for companies who want beautiful designs with quick turn around time.",
        price: "$3,000",
        frequency: "/month",
        features: [
            "Dedicated designer",
            "Pause or cancel anytime",
            "Quick turn-around time",
            "Unlimited revisions",
            "Easy, async communication",
        ],
        highlight: false,
        buttonText: "Contact us",
    },
    {
        name: "Full-stack team",
        description:
            "Works for companies who want a team to build out new features or products.",
        price: "$8,000",
        frequency: "/month",
        features: [
            "Designer, Full-stack dev, and PM",
            "Pause or cancel anytime",
            "Quick turn-around time",
            "MVPs, new or existing products",
            "Easy, async communication",
        ],
        highlight: true,
        mostPopular: true,
        buttonText: "Contact us",
    },
    {
        name: "Project based",
        description:
            "You have a defined scope and don't need us to continuing supporting it.",
        price: "Custom",
        frequency: "",
        features: [
            "Custom quoting",
            "Flexible payment plans",
            "Designer, Full-stack dev, and PM",
            "Reports with on-demand meetings",
            "Easy, async communication",
        ],
        highlight: false,
        buttonText: "Contact us",
    },
];
---

<section
    id="pricing"
    class="py-24 bg-gray-50 dark:bg-[#0B1120] transition-colors duration-300"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2
                class="text-4xl md:text-3xl font-bold text-gray-900 dark:text-white mb-6"
            >
                Simple pricing to meet your needs. <br />
                <span class="text-gray-500 dark:text-gray-400"
                    >Unlimited requests. Fast turnaround. Cancel anytime.</span
                >
            </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">
            {
                pricingPlans.map((plan) => (
                    <div
                        class={`relative flex flex-col p-8 rounded-2xl transition-all duration-300 ${
                            plan.highlight
                                ? "bg-black dark:bg-white text-white dark:text-gray-900 shadow-2xl scale-105 z-10"
                                : "bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 shadow-xl border border-gray-100 dark:border-gray-700"
                        }`}
                    >
                        {plan.mostPopular && (
                            <span class="absolute top-8 left-8 bg-[#3d3d3d] text-[#e0a86d] text-xs font-semibold px-3 py-1 rounded-full uppercase tracking-wider">
                                Most popular
                            </span>
                        )}

                        <div class={`mb-8 ${plan.mostPopular ? "mt-8" : ""}`}>
                            <h3 class="text-2xl font-bold mb-4">{plan.name}</h3>
                            <p
                                class={`text-sm leading-6 ${plan.highlight ? "text-gray-300 dark:text-gray-600" : "text-gray-500 dark:text-gray-400"}`}
                            >
                                {plan.description}
                            </p>
                        </div>

                        <div class="mb-8">
                            <div class="flex items-baseline gap-1">
                                <span class="text-4xl font-bold">
                                    {plan.price}
                                </span>
                                {plan.frequency && (
                                    <span
                                        class={`text-sm ${plan.highlight ? "text-gray-400 dark:text-gray-500" : "text-gray-400 dark:text-gray-500"}`}
                                    >
                                        {plan.frequency}
                                    </span>
                                )}
                            </div>
                        </div>

                        <ul class="flex-1 space-y-4 mb-8">
                            {plan.features.map((feature) => (
                                <li class="flex items-start gap-3">
                                    <svg
                                        class={`w-5 h-5 flex-shrink-0 ${plan.highlight ? "text-white dark:text-gray-900" : "text-gray-900 dark:text-white"}`}
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                    <span class="text-sm">{feature}</span>
                                </li>
                            ))}
                        </ul>

                        <a
                            href="#contact"
                            class={`block w-full py-3 px-4 rounded-full text-center text-sm font-semibold transition-colors duration-200 ${
                                plan.highlight
                                    ? "bg-white text-black hover:bg-gray-100 dark:bg-gray-900 dark:text-white dark:hover:bg-gray-800"
                                    : "bg-gray-900 text-white hover:bg-gray-800 dark:bg-white dark:text-gray-900 dark:hover:bg-gray-100"
                            }`}
                        >
                            {plan.buttonText}
                        </a>
                    </div>
                ))
            }
        </div>
    </div>
</section>
