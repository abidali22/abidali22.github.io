---
import laravelLogo from "../assets/Laravel.svg";
import symfonyLogo from "../assets/symfony.svg";
import expressLogo from "../assets/express.png";
import fastapiLogo from "../assets/fastapi.png";
import djangoLogo from "../assets/django.svg";

import vueLogo from "../assets/vuejs.png";

import nextLogo from "../assets/nextjs.svg";
import svelteLogo from "../assets/svelte.png";
import tailwindLogo from "../assets/tcss.png";
import flutter from "../assets/flutter.png";
import android from "../assets/android.png";
import apple from "../assets/Apple.png";
import swift from "../assets/swift.png";
import angularjs from "../assets/angularjs.png";
import ts from "../assets/typescript.png";
import js from "../assets/javascript.png";
import reactnew from "../assets/reactnew.png";

import tensorflowLogo from "../assets/tf.jpg";

import hugging from "../assets/hugging.png";
import lgraph from "../assets/lagraph.avif";
import vdb from "../assets/vdb1.png";
import pyt from "../assets/PyT.webp";
import nestlogo from "../assets/nestlogo.jpg";
---

<section
  id="services"
  class="our-services py-24 px-4 sm:px-6 lg:px-8 bg-background-light dark:bg-background-dark transition-colors duration-300 overflow-hidden relative"
>
  <!-- Background decoration -->
  <div
    class="absolute top-0 left-0 w-full h-full overflow-hidden z-0 pointer-events-none"
  >
    <div
      class="absolute -top-24 -right-24 w-96 h-96 bg-primary-light/10 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute top-1/2 -left-24 w-72 h-72 bg-blue-500/10 rounded-full blur-3xl"
    >
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto">
    <!-- Section Heading -->
    <div class="text-center mb-20">
      <h2
        class="text-4xl sm:text-5xl font-bold text-slate-900 dark:text-white mb-6 tracking-tight"
      >
        Empowering <span class="text-primary-DEFAULT">Development Services</span
        >
      </h2>
      <p
        class="text-slate-600 dark:text-slate-300 text-lg sm:text-xl max-w-2xl mx-auto leading-relaxed"
      >
        Gain access to the expert technical services that drive your growth and
        fuel success with cutting-edge solutions.
      </p>
    </div>

    <!-- First Row: Backend + Frontend -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
      <!-- Backend Development -->
      <div
        class="group relative bg-white dark:bg-slate-800 rounded-3xl p-8 shadow-xl shadow-slate-200/50 dark:shadow-none border border-slate-100 dark:border-slate-700 hover:border-primary-light/30 transition-all duration-300 hover:-translate-y-1"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-primary-light/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-3xl"
        >
        </div>

        <div class="relative">
          <h3
            class="text-2xl font-bold text-slate-800 dark:text-white mb-3 group-hover:text-primary-DEFAULT transition-colors"
          >
            Backend Development
          </h3>
          <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-6">
            We build robust, secure, and scalable server-side logic that powers
            your applications with high performance.
          </p>

          <div class="space-y-4">
            <div>
              <h4
                class="text-sm font-bold text-primary-DEFAULT uppercase tracking-wider mb-2"
              >
                Languages
              </h4>
              <p class="text-slate-700 dark:text-slate-200 font-medium">
                PHP, NodeJS, Python
              </p>
            </div>

            <div>
              <h4
                class="text-sm font-bold text-primary-DEFAULT uppercase tracking-wider mb-3"
              >
                Frameworks
              </h4>
              <div class="flex flex-wrap gap-4 items-center">
                <img
                  src={laravelLogo.src}
                  alt="Laravel"
                  class="w-10 h-10 object-contain"
                />
                <img
                  src={symfonyLogo.src}
                  alt="Symfony"
                  class="w-10 h-10 object-contain"
                />
                <img
                  src={expressLogo.src}
                  alt="ExpressJS"
                  class="w-10 h-10 object-contain"
                />
                <img
                  src={fastapiLogo.src}
                  alt="FastAPI"
                  class="w-10 h-10 object-contain"
                />
                <img
                  src={djangoLogo.src}
                  alt="Django"
                  class="w-10 h-10 object-contain"
                />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Frontend Development -->
      <div
        class="group relative bg-white dark:bg-slate-800 rounded-3xl p-8 shadow-xl shadow-slate-200/50 dark:shadow-none border border-slate-100 dark:border-slate-700 hover:border-primary-light/30 transition-all duration-300 hover:-translate-y-1"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-purple-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-3xl"
        >
        </div>

        <div class="relative">
          <h3
            class="text-2xl font-bold text-slate-800 dark:text-white mb-3 group-hover:text-primary-DEFAULT transition-colors"
          >
            Frontend Development
          </h3>
          <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-6">
            We craft the user interface (UI) and user experience (UX) for fast,
            responsive, and visually appealing web apps.
          </p>

          <div class="space-y-4">
            <div>
              <h4
                class="text-sm font-bold text-primary-DEFAULT uppercase tracking-wider mb-2"
              >
                Languages
              </h4>
              <p class="text-slate-700 dark:text-slate-200 font-medium">
                JavaScript, TypeScript, HTML5, CSS3
              </p>
            </div>

            <div>
              <h4
                class="text-sm font-bold text-primary-DEFAULT uppercase tracking-wider mb-3"
              >
                Frameworks & Libraries
              </h4>
              <div class="flex flex-wrap gap-4 items-center">
                <img
                  src={reactnew.src}
                  alt="React"
                  class="w-10 h-10 object-contain"
                />
                <img
                  src={vueLogo.src}
                  alt="Vue.js"
                  class="w-10 h-10 object-contain"
                />
                <img
                  src={angularjs.src}
                  alt="Angular"
                  class="w-10 h-10 object-contain"
                />
                <img
                  src={nextLogo.src}
                  alt="Next.js"
                  class="w-10 h-10 object-contain"
                />
                <img
                  src={svelteLogo.src}
                  alt="Svelte"
                  class="w-10 h-10 object-contain"
                />
                <img
                  src={tailwindLogo.src}
                  alt="Tailwind CSS"
                  class="w-10 h-10 object-contain"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Second Row: Mobile + MVP -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
      <!-- Mobile App Development -->
      <div
        class="group relative bg-white dark:bg-slate-800 rounded-3xl p-8 shadow-xl shadow-slate-200/50 dark:shadow-none border border-slate-100 dark:border-slate-700 hover:border-primary-light/30 transition-all duration-300 hover:-translate-y-1"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-3xl"
        >
        </div>
        <div class="relative h-full flex flex-col justify-between">
          <div>
            <h3
              class="text-2xl font-bold text-slate-800 dark:text-white mb-3 group-hover:text-primary-DEFAULT transition-colors"
            >
              Mobile App Development
            </h3>
            <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-6">
              We develop native and cross-platform apps designed to increase
              user engagement and extend your reach.
            </p>
          </div>
          <div class="flex flex-wrap gap-4 items-center mt-4">
            <img src={apple.src} alt="Apple" class="w-10 h-10 object-contain" />
            <img
              src={android.src}
              alt="Android"
              class="w-10 h-10 object-contain"
            />
            <img src={swift.src} alt="Swift" class="w-10 h-10 object-contain" />
            <img
              src={flutter.src}
              alt="Flutter"
              class="w-10 h-10 object-contain"
            />
          </div>
        </div>
      </div>

      <!-- MVP Development -->
      <div
        class="group relative bg-white dark:bg-slate-800 rounded-3xl p-8 shadow-xl shadow-slate-200/50 dark:shadow-none border border-slate-100 dark:border-slate-700 hover:border-primary-light/30 transition-all duration-300 hover:-translate-y-1"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-green-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-3xl"
        >
        </div>
        <div class="relative h-full flex flex-col justify-between">
          <div>
            <h3
              class="text-2xl font-bold text-slate-800 dark:text-white mb-3 group-hover:text-primary-DEFAULT transition-colors"
            >
              Minimum Viable Product (MVP)
            </h3>
            <p class="text-slate-600 dark:text-slate-300 leading-relaxed mb-6">
              Validate your core concept quickly and affordably with essential
              features to hit the market fast.
            </p>
          </div>
          <div class="flex flex-wrap gap-4 items-center mt-4">
            <img
              src={ts.src}
              alt="TypeScript"
              class="w-10 h-10 object-contain"
            />
            <img
              src={js.src}
              alt="JavaScript"
              class="w-10 h-10 object-contain"
            />
            <img
              src={reactnew.src}
              alt="React"
              class="w-10 h-10 object-contain"
            />
            <img
              src={nextLogo.src}
              alt="Next.js"
              class="w-10 h-10 object-contain"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- Third Row: AI / ML -->
    <div class="grid grid-cols-1">
      <div
        class="group relative bg-slate-900 rounded-3xl p-10 shadow-2xl overflow-hidden"
      >
        <div
          class="absolute inset-0 bg-gradient-to-r from-primary-dark/20 to-purple-600/20 opacity-50"
        >
        </div>
        <div
          class="absolute -right-20 -top-20 w-96 h-96 bg-primary-light/30 rounded-full blur-3xl"
        >
        </div>

        <div
          class="relative z-10 flex flex-col md:flex-row gap-10 items-start md:items-center"
        >
          <div class="flex-1">
            <h3 class="text-3xl font-bold text-white mb-4">
              AI / ML Development
            </h3>
            <p class="text-slate-300 text-lg leading-relaxed mb-8">
              Integrate next-generation intelligence into your products. We
              transform data into predictive models and intelligent agents using
              LLMs, GenAI, and Computer Vision.
            </p>
            <div class="space-y-6">
              <div>
                <h4
                  class="text-sm font-bold text-primary-dark uppercase tracking-wider mb-3"
                >
                  Key Technologies
                </h4>
                <div class="flex flex-wrap gap-3">
                  <span
                    class="px-3 py-1 rounded-full bg-white/10 text-white text-sm backdrop-blur-sm"
                    >LLMs</span
                  >
                  <span
                    class="px-3 py-1 rounded-full bg-white/10 text-white text-sm backdrop-blur-sm"
                    >GenAI</span
                  >
                  <span
                    class="px-3 py-1 rounded-full bg-white/10 text-white text-sm backdrop-blur-sm"
                    >RAG</span
                  >
                  <span
                    class="px-3 py-1 rounded-full bg-white/10 text-white text-sm backdrop-blur-sm"
                    >NLP</span
                  >
                  <span
                    class="px-3 py-1 rounded-full bg-white/10 text-white text-sm backdrop-blur-sm"
                    >Computer Vision</span
                  >
                </div>
              </div>
              <div>
                <h4
                  class="text-sm font-bold text-primary-dark uppercase tracking-wider mb-3"
                >
                  Frameworks & Libraries
                </h4>
                <div class="flex flex-wrap gap-4 items-center">
                  <img
                    src={tensorflowLogo.src}
                    alt="TensorFlow"
                    class="w-10 h-10 object-contain"
                  />
                  <img
                    src={pyt.src}
                    alt="PyTorch"
                    class="w-10 h-10 object-contain"
                  />
                  <img
                    src={vdb.src}
                    alt="VectorDB"
                    class="w-10 h-10 object-contain"
                  />
                  <img
                    src={hugging.src}
                    alt="Hugging Face"
                    class="w-10 h-10 object-contain"
                  />
                  <img
                    src={lgraph.src}
                    alt="LangGraph"
                    class="w-10 h-10 object-contain"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
